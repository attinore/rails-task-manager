<div class="container">
  <h1>My tasks</h1>
  <ul class="list-inline">
    <% @tasks.each do |task| %>
    <li><strong><%= link_to task.title, task_path(task) %></strong> <%= link_to 'delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>

  <%= link_to 'Add a new task', new_task_path %>
</div>
